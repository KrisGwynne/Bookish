<h1>Editing book</h1>

<%= form_for @book do |f| %>

  <p>
    <%= f.label :Title %><br />
    <%= f.text_field :Title, required: true  %>
  </p>
  <p>
    <%= f.label :Author %><br />
    <%= f.text_field :Author, required: true  %>
  </p>
  <p>
    <%= f.label :ISBN %><br />
    <%= f.text_area :ISBN, required: true  %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>

<% end %>

<%= link_to 'Back', books_path %>